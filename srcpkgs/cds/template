do_install() {
	vinstall ${GOPATH}/bin/cds 555 usr/bin
	vinstall ${GOPATH}/bin/worker 555 usr/bin cds-worker
	vinstall ${GOPATH}/bin/api 555 usr/bin cds-api
	vinstall ${GOPATH}/bin/caller 555 usr/bin/cds-caller
	# vdoc "doc/*"
}

